{
    "env": {
        "es2021": true,
        "browser": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": ["**/dist/*.js", "**/jsdoc/"],
    "rules": {
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": "off",
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "semi": [1, "always"]
    },
    "root": true
}
