{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "plugins": [
        "jsdoc"
    ],    
    "extends": [
        "standard",
        "plugin:jsdoc/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "jsdoc/require-jsdoc": [1, {
            "require": {
              "ClassDeclaration": true,
              "MethodDefinition": true
            }
          }],
          "jsdoc/require-description": 1,
          "jsdoc/require-description-complete-sentence": 1
    },
    "ignorePatterns": ["**/jsdoc"]
}